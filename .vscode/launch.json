{
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run serve",
            "name": "Run npm serve",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ts-node-dev",
            "runtimeExecutable": "npx",
            "args": [
                "tsnd",
                "--respawn",
                "${workspaceRoot}/src/app.ts"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}